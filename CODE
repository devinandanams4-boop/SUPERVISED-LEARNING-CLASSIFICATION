import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.linear_model import LogisticRegression
from sklearn.metrics import accuracy_score
df=pd.read_csv("C:\\Users\\user\\Desktop\\loan_approval_dataset_project.csv")
df
df.columns
from sklearn.preprocessing import LabelEncoder
le=LabelEncoder()
df[' loan_status_le']=le.fit_transform(df[' loan_status'])
df[' self_employed_le']=le.fit_transform(df[' self_employed'])
y=df[' loan_status_le']
y
x=df[[' self_employed_le',
       ' income_annum', ' loan_amount', ' loan_term', ' cibil_score',
       ' residential_assets_value', ' commercial_assets_value',
       ' luxury_assets_value', ' bank_asset_value']]
x_train,x_test,y_train,y_test=train_test_split(x,y,test_size=0.2,random_state=42)
s=LogisticRegression(max_iter=1000)
s.fit(x_train,y_train)
y_pred=s.predict(x_test)
y_pred
accuracy=accuracy_score(y_pred,y_test)
accuracy
